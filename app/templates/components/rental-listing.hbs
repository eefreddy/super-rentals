<article class="listing">
  <a {{action 'toggleImageSize'}} class="image {{if isWide "wide"}}">
    <img src="{{rental.image}}" alt="">
    <small>View Larger</small>
  </a>
  <h3>{{rental.title}}</h3>
  <div class="detail position">
    <span>Position:</span> {{rental.position}}
  </div>
  <div class="detail age">
    <span>Age:</span> {{rental.age}}
  </div>
  <div class="detail ratings">
    <span><ul><li>Shooting: {{rental.shootingrating}}</li>
          <li> Defending: {{rental.defenderating}}</li>
          <li> Playmaking: {{rental.playmakerating}}</li>
          </ul></span> 
  </div>

</article>